<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    android:layout_marginBottom="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_animal"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/roundedCornersImageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/txt_animal_nombre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/img_animal"
            app:layout_constraintTop_toTopOf="@id/img_animal"
            app:layout_constraintEnd_toStartOf="@id/txt_estado_animal"
            tools:text="Luna" />

        <TextView
            android:id="@+id/txt_animal_especie"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/txt_animal_nombre"
            app:layout_constraintTop_toBottomOf="@id/txt_animal_nombre"
            app:layout_constraintEnd_toEndOf="@id/txt_animal_nombre"
            tools:text="Elefante Africano" />

        <TextView
            android:id="@+id/txt_estado_animal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textStyle="bold"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_tag_saludable"
            android:textColor="#1B5E20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/txt_animal_nombre"
            tools:text="Saludable" />

        <TextView
            android:id="@+id/txt_animal_edad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawableStart="@drawable/ic_pastel"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            app:drawableTint="#757575"
            app:layout_constraintStart_toStartOf="@id/txt_animal_especie"
            app:layout_constraintTop_toBottomOf="@id/txt_animal_especie"
            tools:text="15 años" />

        <TextView
            android:id="@+id/txt_animal_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:drawableStart="@drawable/ic_location"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            app:drawableTint="#757575"
            app:layout_constraintStart_toEndOf="@id/txt_animal_edad"
            app:layout_constraintTop_toTopOf="@id/txt_animal_edad"
            tools:text="Área de Sabana" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>